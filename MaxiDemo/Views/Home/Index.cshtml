@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Maxi Demo</title>
    <link href="~/Content/themes/default/css/home.css" rel="stylesheet" />
    <link href="~/Content/Themes/ui-lightness/jquery-ui-1.10.4.custom.css" rel="stylesheet" />
    <link href="~/Content/themes/default/css/toastr.css" rel="stylesheet" />
</head>
<body>
    <h1 data-bind="text: Title"></h1>

    <div id="menuHolder" data-bind="with:UserContext">
        <ul data-bind="menu: Permissions, foreach: Permissions">
            <li>
                <a href="#"><span class="#ui-icon ui-icon-disk" data-bind="text: Description"></span></a>
                <ul data-bind="foreach: Items">
                    <li>
                        <a href="#" data-bind=" click: $root.MenuSelected"><span class="#ui-icon ui-icon-disk" data-bind="text: Description"></span></a>
                    </li>
                </ul>
            </li>
        </ul>
    </div>
    <div>
    </div>
    <script type="text/javascript" data-main='App/init' src="~/Scripts/require.js"></script>
</body>
</html>
